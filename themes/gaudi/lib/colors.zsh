# Reset (Lower case k, f will reset the foreground and background)
export NC="%k%f"

# Regular Colors
export BLACK="%F{black}"
export RED="%F{red}"
export GREEN="%F{green}"
export YELLOW="%F{yellow}"
export BLUE="%F{blue}"
export MAGENTA="%F{magenta}"
export CYAN="%F{cyan}"
export WHITE="%F{white}"
export ORANGE="%F{166}"

# Background
export BACKGROUND_BLACK="%K{black}"
export BACKGROUND_RED="%K{red}"
export BACKGROUND_GREEN="%K{green}"
export BACKGROUND_YELLOW="%K{yellow}"
export BACKGROUND_BLUE="%K{blue}"
export BACKGROUND_MAGENTA="%K{magenta}"
export BACKGROUND_CYAN="%K{cyan}"
export BACKGROUND_WHITE="%K{white}"
export BACKGROUND_ORANGE="%K{166}"
